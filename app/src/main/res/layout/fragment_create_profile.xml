<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center|top"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateProfileFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35.0dip"
            android:gravity="center"
            android:padding="0.0dip"
            android:text="Let's get Started!"
            android:textColor="@color/colorBalck"
            android:textSize="21.0sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="Create an account on to use all \nthe features"
            android:textColor="@color/colorGrey1"
            android:textSize="16.0sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:src="@drawable/banklogo" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="12.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="10.0dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_editetext"
                    android:drawableLeft="@drawable/ic_perm_"
                    android:drawablePadding="10.0dip"
                    android:hint="First Name"
                    android:padding="12.0dip"
                    android:textColor="@color/colorGrey2"
                    android:textColorHint="@color/colorGrey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip">

                <EditText
                    android:id="@+id/edt_last_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_editetext"
                    android:drawableLeft="@drawable/ic_perm_"
                    android:drawablePadding="10.0dip"
                    android:hint="Last Name"
                    android:padding="12.0dip"
                    android:textColor="@color/colorGrey2"
                    android:textColorHint="@color/colorGrey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip">

                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_editetext"
                    android:drawableLeft="@drawable/ic_perm_"
                    android:drawablePadding="10.0dip"
                    android:hint="User Name"
                    android:padding="12.0dip"
                    android:textColor="@color/colorGrey2"
                    android:textColorHint="@color/colorGrey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:layout_weight="1.0">

                <EditText
                    android:id="@+id/edt_country"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/rounded_editetext"
                    android:drawableLeft="@drawable/ic_location_24"
                    android:hint="City"
                    android:padding="12.0dip"
                    android:textColor="@color/colorGrey2"
                    android:textColorHint="@color/colorGrey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip">

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_editetext"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="10.0dip"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="12.0dip"
                    android:textColor="@color/colorGrey2"
                    android:textColorHint="@color/colorGrey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip">

                <EditText
                    android:id="@+id/edt_password_confirm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_editetext"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="10.0dip"
                    android:hint=" Confirm Password"
                    android:inputType="textPassword"
                    android:padding="12.0dip"
                    android:textColor="@color/colorGrey2"
                    android:textColorHint="@color/colorGrey" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="15.0dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_gravity="center"
                android:text="By signing up, you agree to our Terms and Policy"
                android:textColor="@color/colorGrey1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="15.0dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="52.0dip"
                android:layout_gravity="center"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/rounded_green2"
                android:elevation="10.0dip"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_create_account"
                    android:layout_width="150.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_green2"
                    android:gravity="center"
                    android:text="Sign Up"
                    android:textColor="@color/colorWhite"
                    android:textSize="18.0dip"></Button>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="20.0dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="52.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="20.0dip"
            android:elevation="10.0dip"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48.0dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="If you have an account? "
                android:textColor="@color/colorGrey2" />

            <TextView
                android:id="@+id/btn_loginHere"
                android:layout_width="wrap_content"
                android:layout_height="48.0dip"
                android:layout_gravity="center"
                android:layout_marginLeft="5.0dip"
                android:background="?android:selectableItemBackground"
                android:gravity="center"
                android:text="Login Here"
                android:textSize="20.0dip"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
